<%- include('partials/header') -%>
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <nav class="navbar navbar-expand-lg navbar-light fixed-top">
      <div class="container">
          <a class="navbar-brand"href="/">
              <img src="imgs/logo.png" alt="logo" >
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent" style="display: inline-block;">
            <ul class="navbar-nav mr auto">
                <li class="nav-item">
                    <a class="btn btn-outline-dark btn-nav " href="/login" role="button">Login</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-warning text-white " href="/signup" role="button">Signup</a>
                </li>  
            </ul>
          </div>
      </div>
  </nav>
</div>
<main class="container">
  <div class="row justify-content-center">
    <section class="col-6 mt-5">
      <h1 class="font-bold py-4">Login with e-mail</h1>
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <div class="d-flex justify-content-between">
          <button type="submit" class="btn btn-success text-white">Login</button>
          <!-- <a href="/signup" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-3 rounded"> Signup</a> -->
        </div>
      </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
