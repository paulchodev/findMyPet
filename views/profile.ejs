<%- include('partials/header') -%>
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column py-5">
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color:#f0a04b">
      <div class="container">
          <a class="navbar-brand"href="/profile">
              <img src="imgs/logo.png" alt="logo" >
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
              <a href="/feed" class="btn ">Feed</a>  
              <a href="/profile" class="btn ">My Posts</a>
              <a href="/newPost" class="btn ">New Post</a>
              <a href="/logout" class="btn btn-warning text-white">Logout</a>
          </div>
      </div>
  </nav>
</div>

<div class="container card-container py-5">
  <h1 class="text-3xl font-bold pt-5">My Posts</h1>
  <div class="row  row-cols-1 row-cols-md-3 g-4">
  <div class="row mt-5 pb-5">
    <ul class="row list-unstyled justify-content-start">
      <% for(var i=0; i<posts.length; i++) {%>
        <div class="col-lg-3  mb-5 ">
          <div class="card h-100 " style="width: 15rem">
            <li class="">
            <a href="/post/<%= posts[i]._id%>">
            <img class="card-img-top" src="<%= posts[i].image%>" style="height: 200px; width:100%">
            </a>
            </li>
            <div class="card-body" style="background-color: #fefbe9">
              <h5 class="card-title">
                <%= posts[i].title %>
              </h5>
              <h6 class="card-text text-sm">
                <%= posts[i].city %>, <%= posts[i].state %>
              </h6>
              <h6 class="card-text text-sm mt-2">
                <%= moment(posts[i].createdAt).fromNow() %>
              </h6>
            </div>
          </div>
        </div>
        
      <% } %>
      </ul>
    </div>
  </div>
<%- include('partials/footer') -%>